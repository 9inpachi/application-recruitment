<property>
<code>{{velocity}}
#set($query = "from doc.object(JobArea.JobAreaClass) as job")

#if("$!{request.job}" != "")
   #set($query = "$query where doc.fullName='JobArea.${request.job}'")
#else
  #set($query = "$query where job.status=2 and job.validation=3")
#end
#set($jobs = $services.query.xwql($query).execute())

#if("$!{request.job}" == "")
{{html wiki="true"}}
    #foreach($job in $jobs)
        #set($jobDoc = $xwiki.getDocument($job))
        #if("$!{jobDoc.position}" != "")
           * &lt;a href="$doc.getURL("view", "job=${jobDoc.position}")"&gt;$jobDoc.position&lt;/a&gt;
        #end
    #end
{{/html}}
#else 
  #set($jobDoc = $xwiki.getDocument($jobs))
  = $jobDoc.position =

  **$jobDoc.displayPrettyName("introduction"):**
  $jobDoc.display("introduction")

  **$jobDoc.displayPrettyName("responsabilities"):**
  $jobDoc.display("responsabilities")

  **$jobDoc.displayPrettyName("requiredCompetences"):**
  $jobDoc.display("requiredCompetences")

  **$jobDoc.displayPrettyName("otherSkills"):**
  $jobDoc.display("otherSkills")

  **$jobDoc.displayPrettyName("benefits"):**
  $jobDoc.display("benefits")

  **$jobDoc.displayPrettyName("companyDescription"):**
  $jobDoc.display("companyDescription")

  **$jobDoc.displayPrettyName("otherDetails"):**
  $jobDoc.display("otherDetails")

  #if("$!{request.step}" == "")
    {{html}}
      &lt;a href="$doc.getURL("view", "job=${request.job}&amp;step=apply")"&gt;Apply to this position&lt;/a&gt;
    {{/html}} 
  #else
    {{include document="RecruitmentApp.NewCandidateSheet"/}}
  #end
#end
{{/velocity}}</code>
